#responses
    padding:  0 0 90px
    width: 100%
    background-image url(../img/response_bg.jpg)
    background-position bottom center
    background-size cover
    background-repeat no-repeat
    h3
        background-color: #116576
        background-image: -moz-linear-gradient( 176deg, rgb(0,74,92) 0%, rgb(41,149,165) 50%, rgb(0,67,85) 100%);
        box-shadow: 0px 5px 11px 0px rgba(0, 0, 0, 0.15);
        position: relative
        line-height 129px
        font-size: 44px;
        font-family: "GeometriaBold", sans-serif;
        color: rgb(255, 255, 255);
        &:before
        &:after
            content: ''
            position: absolute
            background-color: transparent
            border-top: 2px dashed #e1a20a
            width: 100%
            height: 1px;
            left 0
            right 0
        &:before
            top 10px
        &:after
            bottom: 10px
#carousel_video
    .carousel-inner
        width: 615px
        margin: 0 auto
        .video_wrapper
            width: 580px
            border-radius: 5px
#controls
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    width: 930px;
    margin: 0 auto;
    .carousel-control
        display block
        border-radius: 50%;
        background-color: rgb(39, 146, 162);
        background-image:  none
        box-shadow: 0px 5px 11px 0px rgba(0, 0, 0, 0.15);
        width: 50px;
        height: 50px;
        line-height: 42px
        color: #ffffff
        font-size: 34px
        opacity 1
        text-shadow: none