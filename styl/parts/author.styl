#author
    padding: 90px 0
    width: 100%
    background-image url(../img/about_bg.jpg)
    background-position center
    background-size cover
    background-repeat no-repeat
    .video_wrapper
        float left
        margin-right: 40px
        width: 50%
.about_container

    h4
        font-size: 27px;
        font-family: "GeometriaBold";
        color: rgb(94, 171, 183);
        line-height: 1.2;
        position relative
        margin-bottom: 43px
        &:after
            content: ''
            display block
            width: 69px
            height 4px
            background-color: #e7ac0e
            position: absolute
            right 40.3%
            bottom: -8px
    p
        font-size: 18px;
        font-family: "Geometria", sans-serif;
        color: rgb(50, 51, 51);
        line-height: 1.45
        margin-bottom: 26px
.about_list
    margin 36px 0 10px 16px
    li
        font-size: 18px;
        font-family: "GeometriaBold";
        line-height: 1.3
        margin-bottom: 14px
        color #5eabb7
        span
            color: rgb(50, 51, 51);