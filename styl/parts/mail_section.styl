#mail_section
    background-color: #116576
    background-image: -moz-linear-gradient( 176deg, rgb(0,74,92) 0%, rgb(41,149,165) 50%, rgb(0,67,85) 100%);
    box-shadow: 0px 5px 11px 0px rgba(0, 0, 0, 0.15);
    position: relative
    padding: 31px 0
    &:before
    &:after
        content: ''
        position: absolute
        background-color: transparent
        border-top: 2px dashed #e1a20a
        width: 100%
        height: 1px;
        left 0
        right 0
    &:before
        top 10px
    &:after
        bottom: 10px
    .form_newsletter
        .button
            margin-top: 0
            width: 100%
.form_newsletter
    height: 70px
    display: flex
    align-items: center
    justify-content: center
    h4
        font-size: 27px;
        font-family: "GeometriaBold", sans-serif;
        color: #ffffff
        line-height: 1.3
        text-align left
    p
        font-size: 24px;
        font-family: "GeometriaItalic", sans-serif;
        color: rgb(255, 254, 254);
        line-height: 1.3
        text-align: center

    .infront_submit,
    .span_phone
        font-size: 16px
    button.button
        margin-top: 0
.email-block input,
.phone-block input,
.email-block input:focus,
.phone-block input:focus
    border: 1px solid rgb(123, 123, 123);
    border-radius: 5px;
    background-color: rgb(255, 255, 255);
    box-shadow: inset 0px 0px 9px 0.45px rgba(0, 0, 0, 0.39);
    width: 100%
    font-size: 16px;
    font-family: "GeometriaRegular", sans-serif;
    color: #1d1c18
    line-height: 1.2
    text-align: left;
    padding: 0 15px 0 0
    min-height: 61px
    text-indent: 15px
    outline 0