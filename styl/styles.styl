*
	margin: 0
	padding: 0
	outline: 0

h3
	font-size: 44px;
	font-family: "GeometriaBold";
	color: rgb(0, 30, 48);
	line-height: 1;
	text-align: center
	margin-bottom: 85px

.button
	display block
	border: 1px solid rgb(157, 107, 5);
	border-radius: 5px;
	background-image: linear-gradient( 0deg, rgb(237,183,18) 0%, rgb(213,141,3) 100%);
	width: 359px;
	height: 61px;
	line-height: 61px
	margin: 75px auto 0
	font-size: 24px;
	font-family: "GeometriaBold",sans-serif;
	color: rgb(255, 255, 255);
	font-weight: bold;
	text-align: center
	transition: all  .5s ease
	&:hover
		background-image: linear-gradient( 90deg, rgb(237,183,18) 0%, rgb(213,141,3) 100%);
		color: #0f2838
		transition: all  .5s ease
		text-decoration: none 
	&:focus
		color: rgb(255, 255, 255);
		background-image: linear-gradient( 0deg, rgb(237,183,18) 0%, rgb(213,141,3) 100%);
		text-decoration: none 
		transition: all  .5s ease
.video_wrapper
	margin 0 auto
	position relative
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		border-radius 5px
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer

